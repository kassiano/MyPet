<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.registerPet.RegisterPetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CADASTRO DO PET"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/namePetRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Nome"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sexo"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/genderPetRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Sexo"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raça"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/racePetRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Raça"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Castrado?"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/castratedPetRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Castrado"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnRegisterPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textSize="16sp"/>




    </LinearLayout>



</LinearLayout>